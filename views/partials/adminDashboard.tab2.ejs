<div
  class="tab-pane"
  role="tabpanel"
  id="tab-2"
  style="background: #f0f8ff; width: 100%"
>

  <div
    style="
      background: #f0f8ff;
      position: sticky;
      overflow: visible;
      height: 700px;
      border: 8px none #f0f8ff;
      font-size: 40px;
      width: 100%;
    "
  >
    <!-- table 1 starts -->
    <div id="time" name="time">
      <label
        class="form-label"
        style="
          font-family: ABeeZee, sans-serif;
          background: #f0f8ff;
          transform: translate(0px) translateY(0px) scale(1.8);
          font-size: 15px;
          margin-left: 40%;
          width: 20%;
          text-align: center;
          margin-bottom: 15px;
          margin-right: 40%;
          color: var(--bs-black);
        "
        >Leave History</label
      >
      <form action="/admin/generate-leave-report">
        <div
        class="table-responsive"
        style="
          height: 400px;
          width: 76%;
          font-size: 16px;
          border-radius: 10px;
          border-width: 2px;
          border-top-left-radius: 10px;
          background: var(--bs-white);
          box-shadow: 0px 0px 10px 3px var(--bs-gray-600);
          position: relative;
          text-align: left;
          font-family: ABeeZee, sans-serif;
          overflow: scroll;
          transform: perspective(0px) translate(0px);
          padding: 2%;
          padding-top: 25px;
          margin-left: 12%;
          margin-right: 12%;
        "
      >
      
        <table style="display: none;">
          <tbody>
            <% if(leaveHistory.length > 0) { %>
              <% leaveHistory.forEach(leave=> { %>
                <tr id="leaveHidden">
                  <td id="leaveId"> <a href="/admin/details?leaveId=<%= leave.leaveId %>"> <%= leave.leaveId %>  </a> </td>
                  <td id="issueTime"><%= leave.time %></td>
                  <td id="studentId"> <a href="/admin/dashboard?studentId=<%= leave.id %>&from=&to="><%= leave.id %></a></td>
                  <td id="name"><%= leave.name %></td>
                  <td id="purposeOfVisit"><%= leave.purposeOfVisit %></td>
                  <td id="status"><%= user.role === 'supervisor' ? leave.supervisorStatus : leave.provostStatus %></td>
                </tr>
              <% }) %>
            <% } %>
          </tbody>
        </table>

        <table class="table">
          <thead style="position: static">
            <tr
              style="
                position: sticky;
                top: 0;
                font-size: 16px;
                width: 50%;
                height: 54px;
                padding-right: 0px;
              "
            >
              <th style="width: 16.5%; background: var(--bs-gray-500)">
                Leave Id
              </th>
              <th
                style="
                  position: sticky;
                  width: 16.5%;
                  border-style: solid;
                  border-color: var(--bs-gray-400);
                  background: var(--bs-gray-500);
                  height: 55px;
                "
              >
                Issuing Date
              </th>
              <th
                style="
                  position: sticky;
                  width: 16.5%;
                  border-style: solid;
                  border-color: var(--bs-gray-400);
                  background: var(--bs-gray-500);
                "
              >
                Id
              </th>
              <th
                style="
                  width: 16.5%;
                  border-color: var(--bs-table-border-color);
                  background: var(--bs-gray-500);
                "
              >
                Name
              </th>
              <th style="width: 16.5%; background: var(--bs-gray-500)">
                Reason
              </th>
              <th style="width: 16.5%; background: var(--bs-gray-500)">
                Verdict
              </th>
            </tr>
          </thead>
          <tbody id="leaveTable" name="leaveTable">
            <% if(leaveHistory.length > 0) { %>
              <% leaveHistory.forEach(leave=> { %>
                <tr id="leave">
                  <td id="leaveId"> <a href="/admin/details?leaveId=<%= leave.leaveId %>"> <%= leave.leaveId %>  </a> </td>
                  <td id="issueTime"><%= leave.time %></td>
                  <td id="studentId"> <a href="/admin/dashboard?studentId=<%= leave.id %>&from=&to="><%= leave.id %></a></td>
                  <td id="name"><%= leave.name %></td>
                  <td id="purposeOfVisit"><%= leave.purposeOfVisit %></td>
                  <td id="status"><%= user.role === 'supervisor' ? leave.supervisorStatus : leave.provostStatus %></td>
                </tr>
              <% }) %>
            <% } %>
          </tbody>
        </table>
      </div>
      <button
        class="btn btn-primary"
        type="submit"
        style="
          transform: translate(0px) translateX(0px);
          margin-left: 40%;
          width: 20%;
          margin-right: 40%;
        "
      >
        Generate Report
      </button>
      </form>
    </div>
    <!-- table 1 ends -->

    <!-- table 2 starts -->
    <div
      style="
        margin-top: 15px;
        margin-left: 0px;
        margin-bottom: 0px;
        height: 600px;
      "
    >
      <label
        class="form-label"
        style="
          font-family: ABeeZee, sans-serif;
          background: #f0f8ff;
          transform: translate(0px) translateY(0px) scale(1.8);
          font-size: 15px;
          margin-left: 40%;
          width: 20%;
          text-align: center;
          margin-bottom: 15px;
          margin-right: 40%;
          color: var(--bs-black);
        "
        >Late History</label
      >
      <form action="/admin/generate-late-report">
        <div
        class="table-responsive"
        style="
          height: 400px;
          width: 76%;
          font-size: 16px;
          border-radius: 10px;
          border-width: 2px;
          border-top-left-radius: 10px;
          background: var(--bs-white);
          box-shadow: 0px 0px 10px 3px var(--bs-gray-600);
          position: relative;
          text-align: left;
          font-family: ABeeZee, sans-serif;
          overflow: scroll;
          transform: perspective(0px) translate(0px);
          padding: 2%;
          padding-top: 25px;
          margin-left: 12%;
          margin-right: 12%;
        "
      >
        <table class="table">
          <thead style="position: static">
            <tr
              style="
                position: sticky;
                top: 0;
                font-size: 16px;
                width: 50%;
                height: 54px;
                padding-right: 0px;
              "
            >
              <th style="width: 16.5%; background: var(--bs-gray-500)">
                Late Id
              </th>
              <th
                style="
                  position: sticky;
                  width: 16.5%;
                  border-style: solid;
                  border-color: var(--bs-gray-400);
                  background: var(--bs-gray-500);
                  height: 55px;
                "
              >
                Issuing Date
              </th>
              <th
                style="
                  position: sticky;
                  width: 16.5%;
                  border-style: solid;
                  border-color: var(--bs-gray-400);
                  background: var(--bs-gray-500);
                "
              >
                Id
              </th>
              <th
                style="
                  width: 16.5%;
                  border-color: var(--bs-table-border-color);
                  background: var(--bs-gray-500);
                "
              >
                Name
              </th>
              <th style="width: 16.5%; background: var(--bs-gray-500)">
                Reason
              </th>
              <th style="width: 16.5%; background: var(--bs-gray-500)">
                Verdict
              </th>
            </tr>
          </thead>
          <tbody>
            <tbody>
              <% if(lateHistory.length > 0) { %>
                <% lateHistory.forEach(late=> { %>
                  <tr>
                    <td> <a href='/admin/history/details?lateId=<%= late.lateId %>'><%= late.lateId %></a> </td>
                    <td><%= late.time %></td>
                    <td> <a href="/admin/dashboard?studentId=<%= late.id %>&from=&to="><%= late.id %></a></td>
                    <td><%= late.name %></td>
                    <td><%= late.reason %></td>
                    <td><%= late.priorAuthorization %></td>
                  </tr>
                <% }); %>
              <% } %>
            </tbody>
          </tbody>
        </table>
      </div>
      <button
        class="btn btn-primary"
        type="submit"
        style="
          transform: translate(0px) translateX(0px);
          margin-left: 40%;
          width: 20%;
          margin-right: 40%;
        "
      >
        Generate Report
      </button>
      </form>
    </div>
  </div>
</div>
