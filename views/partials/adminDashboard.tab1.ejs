<div
  class="tab-pane active"
  role="tabpanel"
  id="tab-1"
  style="background: #f0f8ff; width: 100%"
>

  <div
    style="
      background: #f0f8ff;
      position: sticky;
      overflow: auto;
      height: 700px;
      border: 8px none #f0f8ff;
      font-size: 40px;
    "
  >
    <label
      class="form-label"
      style="
        font-family: ABeeZee, sans-serif;
        background: #f0f8ff;
        transform: translate(0px) translateY(0px) scale(1.8);
        font-size: 15px;
        width: 20%;
        margin-bottom: 15px;
        margin-left: 40%;
        text-align: center;
      "
      >Students' Log</label
    >
    <div
      class="table-responsive"
      style="
        height: 400px;
        width: 76%;
        font-size: 16px;
        border-radius: 10px;
        border-width: 2px;
        border-top-left-radius: 10px;
        background: var(--bs-white);
        box-shadow: 0px 0px 10px 3px var(--bs-gray-600);
        position: relative;
        text-align: left;
        margin: 0;
        font-family: ABeeZee, sans-serif;
        overflow: scroll;
        transform: perspective(0px) translate(0px);
        padding: 2%;
        padding-top: 25px;
        margin-right: 12%;
        margin-left: 12%;
      "
    >
      <table class="table">
        <thead style="position: static">
          <tr
            style="
              position: sticky;
              top: 0;
              font-size: 16px;
              width: 50%;
              height: 54px;
              padding-right: 0px;
            "
          >
            <th style="width: 20%; background: var(--bs-gray-500)">Leave ID</th>
            <th
              style="
                position: sticky;
                width: 20%;
                border-style: solid;
                border-color: var(--bs-gray-400);
                background: var(--bs-gray-500);
                height: 55px;
              "
            >
              Issuing Date
            </th>
            <th
              style="
                position: sticky;
                width: 20%;
                border-style: solid;
                border-color: var(--bs-gray-400);
                background: var(--bs-gray-500);
              "
            >
              Id
            </th>
            <th
              style="
                width: 20%;
                border-color: var(--bs-table-border-color);
                background: var(--bs-gray-500);
              "
            >
              Name
            </th>
            <th style="width: 20%; background: var(--bs-gray-500)">Reason</th>
            <th style="width: 20%; background: var(--bs-gray-500)">Verdict</th>
          </tr>
        </thead>
        <tbody>
        <%  if (searchResults.length > 0) { %>
          <% searchResults.forEach(src_rslt=> { %>
            <tr>
              <td method="get"><a href="/admin/details?leaveId=<%=  src_rslt.leaveId %>"> <%=  src_rslt.leaveId %> </a> </td>
              <td><%= src_rslt.time %></td>
              <td ><a href="/admin/dashboard?studentId=<%= src_rslt.studentId %>&from=&to="> <%=  src_rslt.studentId %> </a></td>
              <td><%= src_rslt.name %></td>
              <td><%= src_rslt.purposeOfVisit %></td>
              <td>
                <div class="btn-group" role="group" style="font-size: 16px">
                  <a
                    name="leaveApprove"
                    href="/admin/approve?leaveId=<%= src_rslt.leaveId %>&role=<%= user.role %>"
                    class="btn btn-primary"
                    style="font-size: 10px; background: #008000"
                  >
                    Approve</a
                  ><a
                    name="leaveReject"
                    href="/admin/reject?leaveId=<%= src_rslt.leaveId %>&role=<%= user.role %>"
                    class="btn btn-primary"
                    style="
                      transform: translate(25%);
                      font-size: 10px;
                      background: var(--bs-red);
                    "
                  >
                    Reject
                  </a>
                </div>
              </td>
            </tr>
            <% }) %>
          <% } %>
          <!-- row 1 -->
         
        </tbody>
      </table>
    </div>
  </div>
</div>
