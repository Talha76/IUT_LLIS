<!DOCTYPE html>
<html lang="en" style="color: var(--bs-black); background: #f0f8ff">
  <%- include('../partials/adminDashboard.head.ejs') %>

  <body
    style="font-size: 40px; background: #f0f8ff; width: 100%"
  >
    <%- include('../partials/adminDashboard.navbar.ejs') %>

    <div class="search-container" style="margin: 1% 15%; width: 24%;">
      <div class="input-group mb-3">
        <input
          type="search"
          class="form-control"
          aria-label="Username"
          aria-describedby="basic-addon1"
          id="searchText"
          name="searchText"
          placeholder="Search here..."
          oninput="getResults()"
        />
      </div>
      
      <details class="form-control fs-6">
        <summary style="width: auto">Advanced filter</summary>
  
        <!-- Issuing date filter -->
        <details style="margin-left: 15px">
          <summary>Issuing date:</summary>
  
          <div class="d-flex flex-column gap-2">
            <!-- From -->
            <div class="d-flex flex-row gap-2">
              <div style="margin-left: 15px; width: 45px;">From:</div>
              <div>
                <input type="date" name="issueFrom" id="issueFrom">
              </div>
            </div>
            <!-- To -->
            <div class="d-flex flex-row gap-2">
              <div style="margin-left: 15px; width: 45px;">To:</div>
              <div>
                <input type="date" name="issueFrom" id="issueFrom">
              </div>
            </div>
          </div>
        </details>
  
        <!-- Departure date filter -->
        <details style="margin-left: 15px">
          <summary>Departure date:</summary>
  
          <div class="d-flex flex-column gap-2">
            <!-- From -->
            <div class="d-flex flex-row gap-2">
              <div style="margin-left: 15px; width: 45px;">From:</div>
              <div>
                <input type="date" name="issueFrom" id="issueFrom">
              </div>
            </div>
            <!-- To -->
            <div class="d-flex flex-row gap-2">
              <div style="margin-left: 15px; width: 45px;">To:</div>
              <div>
                <input type="date" name="issueFrom" id="issueFrom">
              </div>
            </div>
          </div>
        </details>
  
        <!-- Arrival date filter -->
        <details style="margin-left: 15px">
          <summary>Arrival date:</summary>
  
          <div class="d-flex flex-column gap-2">
            <!-- From -->
            <div class="d-flex flex-row gap-2">
              <div style="margin-left: 15px; width: 45px;">From:</div>
              <div>
                <input type="date" name="issueFrom" id="issueFrom">
              </div>
            </div>
            <!-- To -->
            <div class="d-flex flex-row gap-2">
              <div style="margin-left: 15px; width: 45px;">To:</div>
              <div>
                <input type="date" name="issueFrom" id="issueFrom">
              </div>
            </div>
          </div>
        </details>
  
        <!-- Status filter -->
        <div class="d-flex flex-column gap-0" style="margin-left: 15px;">
          <label for="statusContainer"><strong>Status:</strong></label>
          <div id="statusContainer" class="d-flex flex-row gap-3">
            <div class="form-check">
              <input class="form-check-input" type="checkbox" value="" id="approved" checked>
              <label class="form-check-label" for="approved">
                Approved
              </label>
            </div>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" value="" id="rejected" checked>
              <label class="form-check-label" for="rejected">
                Rejected
              </label>
            </div>
          </div>
        </div>
      </details>
    </div>

    <div style="margin-left: 30px; margin-right: 30px">
      <ul class="nav nav-tabs" role="tablist">
        <li class="nav-item" role="presentation">
          <a
            class="nav-link active"
            role="tab"
            data-bs-toggle="tab"
            href="#tab-1"
            style="font-size: 20px"
            >Pending Requests</a
          >
        </li>
        <li class="nav-item" role="presentation">
          <a
            class="nav-link"
            role="tab"
            data-bs-toggle="tab"
            href="#tab-2"
            style="font-size: 20px"
            >Leave-Late History</a
          >
        </li>
      </ul>
      <div class="tab-content">
        <!-- tab1 -->
        <%- include('../partials/adminDashboard.tab1.ejs') %>
        <!-- tab 1 ends -->

        <!-- tab2 starts -->
        <%- include('../partials/adminDashboard.tab2.ejs') %>
      </div>
    </div>

    <%- include('../partials/adminDashboard.footer.ejs') %>
  </body>
</html>
