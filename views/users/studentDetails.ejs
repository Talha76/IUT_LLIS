<!DOCTYPE html>
<html lang="en">
  
  <%- include('../partials/studentDetails.head.ejs') %>

  <body
    style="
      margin: 0px;
      margin-bottom: 0px;
      padding-bottom: 0px;
      margin-right: 0px;
      padding-right: 0px;
      width: 100%;
      position: relative;
      background: transparent;
    "
    data-bs-target="#navcol-2"
    data-bs-smooth-scroll="true"
  >
  
    <%- include('../partials/studentDetails.navbar.ejs') %>

    <div class="container" style="height: 500px">
      <div style="width: 100%; padding: 2%">
        <label
          class="form-label"
          style="
            background: transparent;
            font-size: 25px;
            font-family: ABeeZee, sans-serif;
            margin: 0px;
            margin-left: -5px;
            margin-bottom: 10px;
          "
          ><span style="text-decoration: underline">Leave Details</span></label
        >
        <form>
          <div style="width: 100%; margin-bottom: 10px">
            <label
              class="form-label d-xxl-flex"
              style="
                width: 100%;
                font-family: Poppins, sans-serif;
                display: inline-block;
              "
              ><strong>Name of Student:</strong></label
            ><input
              class="form-control form-control-sm"
              type="text"
              style="width: 50%"
              name="name"
              placeholder="Your Full Name"
              readonly=""
              value="<%= leaveDetails[0].name %>"
            />
          </div>
          <div style="width: 100%; margin-bottom: 10px">
            <label
              class="form-label d-xxl-flex"
              style="
                width: 100%;
                font-family: Poppins, sans-serif;
                display: inline-block;
              "
              ><strong>Student ID:</strong></label
            ><input
              class="form-control form-control-sm"
              type="text"
              style="width: 50%"
              name="id"
              placeholder="Your Student ID"
              readonly=""
              value="<%= leaveDetails[0].studentId %>"
            />
          </div>
          <div style="width: 100%; margin-bottom: 10px">
            <label
              class="form-label d-xxl-flex"
              style="
                width: 100%;
                font-family: Poppins, sans-serif;
                display: inline-block;
              "
              ><strong>Country:</strong></label
            ><input
              class="form-control form-control-sm"
              type="text"
              style="width: 50%"
              name="country"
              placeholder="Your Country Name"
              readonly=""
              value="<%= leaveDetails[0].country %>"
            />
          </div>
          <div style="width: 100%; margin-bottom: 10px">
            <label
              class="form-label d-xxl-flex"
              style="
                width: 100%;
                font-family: Poppins, sans-serif;
                display: inline-block;
              "
              ><strong>Room No.:</strong></label
            ><input
              class="form-control form-control-sm"
              type="text"
              style="width: 50%"
              name="roomNo"
              placeholder="Your Room Number"
              readonly=""
              value="<%= leaveDetails[0].roomNo %>"
            />
          </div>
          <div style="width: 100%; margin-bottom: 10px">
            <label
              class="form-label d-xxl-flex"
              style="
                width: 100%;
                font-family: Poppins, sans-serif;
                display: inline-block;
              "
              ><strong>Hall Block:</strong></label
            ><input
              class="form-control form-control-sm"
              type="text"
              style="width: 50%"
              name="hallBlock"
              placeholder="Your Hall Block"
              readonly=""
              value="<%= leaveDetails[0].hallBlock %>"
            />
          </div>
          <div style="width: 100%; margin-bottom: 10px">
            <label
              class="form-label d-xxl-flex"
              style="
                width: 100%;
                font-family: Poppins, sans-serif;
                display: inline-block;
              "
              ><strong>Student's Contact Number:&nbsp;</strong></label
            ><input
              class="form-control form-control-sm"
              type="tel"
              id="contact_no-2"
              style="width: 50%; display: inline-block"
              name="studentContact"
              required=""
              readonly=""
              minlength="11"
              maxlength="14"
              placeholder="Your Mobile Number"
              pattern="\d+"
              inputmode="tel"
              autocomplete="on"
              value="<%= leaveDetails[0].contactNo %>"
            />
          </div>
          <div style="width: 100%; margin-bottom: 10px">
            <label
              class="form-label d-xxl-flex"
              style="
                width: 100%;
                font-family: Poppins, sans-serif;
                display: inline-block;
              "
              ><strong>Place of visit:</strong></label
            ><input
              class="form-control form-control-sm"
              type="text"
              style="width: 50%"
              name="placeOfVisit"
              placeholder="Place of your visit during the leave"
              required=""
              readonly=""
              value="<%= leaveDetails[0].placeOfVisit %>"
            />
          </div>
          <div style="margin-bottom: 10px; width: 100%">
            <label
              class="form-label d-xxl-flex"
              style="
                width: 100%;
                font-family: Poppins, sans-serif;
                display: inline-block;
              "
              ><strong>Purpose of visit</strong></label
            ><input
              class="form-control"
              type="text"
              style="margin-top: 10px; width: 50%"
              placeholder="Please describe your purpose"
              name="othersDescription"
              readonly=""
              value="<%= leaveDetails[0].purposeOfVisit %>"
            />
          </div>
          <div style="width: 100%; margin-bottom: 10px">
            <label
              class="form-label d-xxl-flex"
              style="
                width: 100%;
                font-family: Poppins, sans-serif;
                display: inline-block;
              "
              ><strong>Contanct person's phone number:</strong></label
            ><input
              class="form-control form-control-sm"
              type="tel"
              id="contact_no-3"
              style="width: 50%; display: inline-block"
              name="contactPersonContact"
              required=""
              readonly=""
              minlength="11"
              maxlength="14"
              placeholder="Mobile Number"
              pattern="\d+"
              value="<%= leaveDetails[0].guardianContact %>"
            />
          </div>
          <div style="width: 100%; margin-bottom: 10px">
            <label
              class="form-label d-xxl-flex"
              style="
                width: 100%;
                font-family: Poppins, sans-serif;
                display: inline-block;
              "
              ><strong>Date of departure:</strong></label
            ><input
              class="form-control form-control-sm"
              type="date"
              style="width: auto"
              name="departureDate"
              required=""
              readonly=""
              value="<%= leaveDetails[0].departureDate.toISOString().split('T')[0] %>"
            />
          </div>
          <div style="width: 100%; margin-bottom: 10px">
            <label
              class="form-label d-xxl-flex"
              style="
                width: 100%;
                font-family: Poppins, sans-serif;
                display: inline-block;
              "
              ><strong>Date of Arrival:</strong></label
            ><input
              class="form-control form-control-sm"
              type="date"
              style="width: auto"
              required=""
              readonly=""
              name="arrivalDate"
              value="<%= leaveDetails[0].arrivalDate.toISOString().split('T')[0] %>"
            />
          </div>
          <button
            class="btn btn-outline-dark"
            type="submit"
            style="
              width: auto;
              height: auto;
              margin-top: 10px;
              font-size: 15px;
              background: #008000;
              color: var(--bs-btn-active-color);
            "
          >
            Approve</button
          ><button
            class="btn btn-outline-dark"
            type="submit"
            style="
              width: auto;
              height: auto;
              margin-top: 10px;
              font-size: 15px;
              background: var(--bs-danger);
              color: var(--bs-btn-active-color);
              margin-left: 10px;
            "
          >
            Reject
          </button>
        </form>
      </div>
    </div>
    <script src="assets/js/jquery.min.js"></script>
    <script src="assets/bootstrap/js/bootstrap.min.js"></script>
    <script src="assets/js/script.min.js"></script>
  </body>
</html>
